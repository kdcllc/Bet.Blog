    <PackageReference Update="Microsoft.AspNetCore.Mvc" Version="$(NetCoreCommonVersion)"/>
    <PackageReference Update="Microsoft.AspNetCore.Mvc.Core" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Mvc.Testing" Version="$(NetCoreCommonVersion)"/>
    <PackageReference Update="Microsoft.AspNetCore.Razor" Version="$(NetCoreCommonVersion)"/>
