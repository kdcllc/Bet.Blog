    <PackageReference Update="Microsoft.AspNetCore.Routing" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.StaticFiles" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.TestHost" Version="$(NetCoreCommonVersion)" />
  </ItemGroup>

  <ItemGroup Label="Microsoft.EntityFrameworkCore">
    <PackageReference Update="Microsoft.EntityFrameworkCore" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.EntityFrameworkCore.SqlServer" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.EntityFrameworkCore.Tools" Version="$(NetCoreCommonVersion)" />
  </ItemGroup>

  <ItemGroup Label="Microsoft.Extensions">
    <PackageReference Update="Microsoft.Extensions.Configuration.AzureKeyVault" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.Extensions.Identity.Stores" Version="$(NetCoreCommonVersion)" Condition="'$(NetCoreTargetVersion)' == 'netcoreapp3.0'"/>
    <PackageReference Update="Microsoft.Extensions.Configuration.Binder" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.Extensions.DependencyInjection" Version="$(NetCoreCommonVersion)" />
