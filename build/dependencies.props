  </PropertyGroup>

  <ItemGroup Label="Microft.AspNetCore">
    <PackageReference Update="Microsoft.AspNetCore.Authentication.Cookies" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Cryptography.KeyDerivation" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="$(NetCoreCommonVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Hosting.Abstractions" Version="$(NetCoreCommonVersion)" />
